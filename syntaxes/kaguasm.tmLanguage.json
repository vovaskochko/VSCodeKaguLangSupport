{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "KaguOS Assembler",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#operations"
		},
		{
			"include": "#colors"
		},
		{
			"include": "#modes"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.kaguasm",
				"match": "\\b(copy|write|to|cpu_exec|jump|jump_if|label|var|call|func|return|func_end|DEBUG_ON|DEBUG_OFF)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.kaguasm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.kaguasm",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"match": "\\b\\d+\\b",
			"name": "constant.numeric.kaguasm"
		},
		"registers": {
		  	"match": "\\b(INFO_REG_OP|REG_OP|INFO_REG_A|REG_A|INFO_REG_B|REG_B|INFO_REG_C|REG_C|INFO_REG_D|REG_D|INFO_REG_RES|REG_RES|INFO_REG_BOOL_RES|REG_BOOL_RES|INFO_REG_ERROR|REG_ERROR|INFO_DISPLAY_BUFFER|DISPLAY_BUFFER|INFO_DISPLAY_COLOR|DISPLAY_COLOR|INFO_KEYBOARD_BUFFER|KEYBOARD_BUFFER|INFO_DISPLAY_BACKGROUND|DISPLAY_BACKGROUND|INFO_PROGRAM_COUNTER|PROGRAM_COUNTER|INFO_FREE_MEMORY_START|FREE_MEMORY_START|INFO_FREE_MEMORY_END|FREE_MEMORY_END|INFO_FREE_CHUNKS|FREE_CHUNKS)\\b",
			"name": "constant.numeric.kaguasm"
		},
		"operations": {
			"match": "\\b(OP_ADD|OP_SUB|OP_INCR|OP_DECR|OP_DIV|OP_MOD|OP_MUL|OP_IS_NUM|OP_CMP_EQ|OP_CMP_NEQ|OP_CMP_LT|OP_CMP_LE|OP_CONTAINS|OP_GET_LENGTH|OP_STARTS_WITH|OP_GET_COLUMN|OP_REPLACE_COLUMN|OP_CONCAT_WITH|OP_READ_INPUT|OP_DISPLAY|OP_DISPLAY_LN|OP_READ_BLOCK|OP_WRITE_BLOCK|OP_SET_BACKGROUND_COLOR|OP_RENDER_BITMAP|OP_NOP|OP_HALT|OP_UNKNOWN)\\b",
			"name": "constant.numeric.kaguasm"
	  	},
		"colors": {
			"match": "\\b(COLOR_NO|COLOR_GREEN|COLOR_YELLOW|COLOR_RED|COLOR_BLACK|COLOR_BLUE|COLOR_MAGENTA|COLOR_CYAN|COLOR_WHITE)\\b",
			"name": "constant.numeric.kaguasm"
	  	},
		"modes": {
			"match": "\\b(KEYBOARD_READ_LINE|KEYBOARD_READ_CHAR|KEYBOARD_READ_LINE_SILENTLY|KEYBOARD_READ_CHAR_SILENTLY)\\b",
			"name": "constant.numeric.kaguasm"
	  	},
		"labels": {
			"match": "(?<=\\blabel:)\\s*\\w+",
      		"name": "string"
		},
		"comments": {
			"begin": "//",
			"end": "$",
			"name": "comment.line.double-slash.mylanguage"
		}
	},
	"scopeName": "source.kga"
}
